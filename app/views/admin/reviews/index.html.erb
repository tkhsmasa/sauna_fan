 <div class="container">
  <div class="row justify-content-between">
    <div class="col-md-3 py-3">
      <h4>サウナ一覧</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md">
      <table class="table">
        <thead>
          <tr>
            <th scope="col", style="width: 20%"></th>
            <th scope="col", style="width: 35%">タイトル</th>
            <th scope="col", style="width: 10%">評価</th>
            <th scope="col", style="width: 5%">コメント数</th>
            <th scope="col", style="width: 20%">
                ユーザー
            </th>
          </tr>
        </thead>
        <% @reviews.each do |review| %>
        <tbody>
          <tr>
            <td>
              <%= link_to admin_sauna_review_path(review.sauna_id,review) do %>
                <%= review.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
              <% end %>
            </td>
            <td><%= review.review_title.truncate(10) %></td>
            <td><%= review.rate %></td>
            <td><%= review.comments.count %></td>
            <td>
              <%= link_to admin_user_path(review.user) do %>
                <%= review.user.full_name %>
              <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
  <div class="d-flex justify-content-center">
   <%= paginate @reviews %>
  </div>
</div>


