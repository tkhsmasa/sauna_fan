<% if flash[:notice] %>
  <p id="notice">
   <%= flash[:notice] %>
  </p>
<% end %>
<div class="container">
  <div class="row">
    <%= link_to  sauna_path(@sauna) do %>
      <h4 class="m-3"><%= @sauna.name %></h4>
    <% end %>
  </div>

  <h4 class="m-3">レビュー</h4>

  <div>
    <%= @review.review_title %>
    <%= @review.review_detail %>
  </div>


  <h4 class="m-3">コメント</h4>
  　<%= @comment.comment_detail %>
  
  　<%= @comment.created_at %>
  　<% if @comment.created_at != @comment.updated_at %>
  　 <p>編集済み</p> <% @comment.updated_at %>
  　<% end %>
  </div>


  <%= link_to "編集する", edit_sauna_review_comment_path(@sauna,@review,@comment), class: "btn btn-sm btn-success"  %>
  <%= link_to "削除する", sauna_review_comment_path(@sauna,@review,@comment), method: :delete, class: "btn btn-sm btn-danger"  %>
</div>
