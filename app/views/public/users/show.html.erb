<% if flash[:notice] %>
  <p id="notice">
   <%= flash[:notice] %>
  </p>
<% end %>
<div class="container">
  <div class="row">
      <h4 class="m-3"><%= @user.full_name %>のマイページ</h4>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="p-2">
        <label class="pr-2">登録情報</label><%= link_to "編集する", edit_user_path, class: "btn btn-sm btn-success"  %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class = "col-md-4">

      <div class="card m-4">
        <%= image_tag @user.get_user_image(100,100), class: "card-img" %>
        <div class="card-body">
          <h5 class="card-title"><%= @user.full_name %></h5>
          <p class="card-text mb-0">保存数：<%= @user.bookmarks.count %> </p>
          <p class="card-text mb-0">レビュー数：<%= @user.reviews.count %> </p>
          <%= link_to edit_user_path(@user), class: "btn btn-sm btn-success" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
          <!--<p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>-->
        </div>
      </div>
      <%= link_to "編集する", edit_user_path, class: "btn btn-sm btn-success"  %>
    </div>

    <div class = "col-md-8">
      <div class="row mb-5">
        <h4 class="border-bottom">ブックマーク</h4>
        <div class = "col-md-12">
          <% @bookmarks.each do |bookmark| %>
            <div class = "row  border-bottom mb-2 px-1 pb-3">
              <div class ="col-md-9">
                <div class ="row">
                  <%= link_to sauna_path(bookmark.sauna_id) do %>
                    <h4 class="m-3"><strong><%= bookmark.sauna.name %></strong></h4>
                  <% end %>


                  <div class ="col-12"></div>
                  <div class ="col-md-12">
                    <p class ="my-0"><%= bookmark.sauna.address_display %></p>
                  </div>
                  <div class ="col-md-auto">
                    <div id="<%= "average-review-rating" + bookmark.sauna.id.to_s %>", class ="col">
                      <script>
                        var elem = document.getElementById("<%= "average-review-rating" + bookmark.sauna.id.to_s %>");
                        var opt = {
                          starOn: "<%= asset_path('star-on.png') %>",
                          starOff: "<%= asset_path('star-off.png') %>",
                          starHalf: "<%= asset_path('star-half.png') %>",
                          half: true,
                          readOnly: true,
                          score: <%= bookmark.sauna.reviews.average(:rate) || 0 %>
                        };
                        raty(elem,opt);
                      </script>
                    <%= bookmark.sauna.reviews.average(:rate) %>
                    </div>
                  </div>
                  <div class ="col-md-auto">
                    <%= bookmark.sauna.reviews.count %>件
                  </div>
                  <div class ="col-md-auto">
                    <%= bookmark.sauna.bookmarks.count %>件
                  </div>
                  <div class ="col-12"></div>
                  <div class ="col-md-12">
                    <%= bookmark.sauna.genre.name %>
                  </div>
                </div>
              </div>
              <div class ="col-md-3 d-flex align-items-center">
                <div class = "row d-flex justify-content-center">
                  <div class ="col-auto">
                    <% if bookmark.sauna.bookmark_by?(current_user) %>
                      <%= link_to sauna_bookmarks_path(bookmark.sauna), method: :delete do %>
                        <button type="button" class="btn btn btn-warning">保存済み</button>
                      <% end %>
                    <% else %>
                      <%= link_to sauna_bookmarks_path(bookmark.sauna), method: :post do %>
                        <button type="button" class="btn btn btn-outline-warning"> 保存</button>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="row">
        <h4 class="border-bottom">レビュー</h4>
        <div class = "col-md-12">
        <% @reviews.each do |review| %>
          <div class = "row  border-bottom mb-2 px-1 pb-3">
            <%= link_to  sauna_path(review.sauna) do %>
              <h4 class="m-3"><%= review.sauna.name %></h4>
            <% end %>
            <div class ="col-12"></div>
            <div  class ="col-md-12 mb-2">
              <%= review.visit_date.strftime('%Y/%m') %>に訪問
            </div>
            <div class ="col-md-12">
              <%= link_to  sauna_review_path(review.sauna,review) do %>
                <p class="mb-0 h4"><%= review.review_title %></p>
              <% end %>
            </div>

            <div class ="col-md-12">
              <span id="star-rate-<%= review.id %>"></span>
              <script>
                var elem = document.getElementById('star-rate-<%= review.id %>');
                var opt = {
                  size: 36,
                  starOn: "<%= asset_path('star-on.png') %>",
                  starOff: "<%= asset_path('star-off.png') %>",
                  starHalf: "<%= asset_path('star-half.png') %>",
                  half: true,
                  readOnly: true,
                  score: <%= review.rate %>
                };
                raty(elem,opt);
              </script>
              <%= review.rate %>
            </div>



          <%#= link_to "編集する", edit_sauna_review_path(@review.sauna.id,@review), class: "btn btn-sm btn-success"  %>
          <%#= link_to "削除する", sauna_review_path(@review), method: :delete, class: "btn btn-sm btn-danger"  %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>




