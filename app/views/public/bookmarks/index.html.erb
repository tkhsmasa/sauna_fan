<div class="container">

  <div class="row">
    <h4 class="p-3">保存一覧</h4>
  </div>

  <div class="card-list-container py-5">
    <% @bookmarks.each do |bookmark| %>
    <div class="card">
      <div scope="card-body">
        <%= link_to  sauna_path(bookmark.sauna) do %>
          <%= bookmark.sauna.name %>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center">
   <%= paginate @bookmarks %>
  </div>
</div>
